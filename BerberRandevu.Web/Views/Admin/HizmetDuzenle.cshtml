@model BerberRandevu.Web.Models.Admin.HizmetDuzenleViewModel

@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<div class="container-fluid">
    <div class="row justify-content-center">
   <div class="col-md-8 col-lg-6">
   <div class="mb-4">
<a asp-action="Hizmetler" class="btn btn-outline-secondary btn-sm">
     <i class="fa-solid fa-arrow-left me-1"></i> Geri
  </a>
  </div>

 <div class="card shadow-sm">
       <div class="card-header bg-primary text-white">
  <h4 class="mb-0">
       <i class="fa-solid fa-pen-to-square me-2"></i>Hizmet Düzenle
       </h4>
 </div>
      <div class="card-body p-4">
     <form asp-action="HizmetDuzenle" method="post">
      <input type="hidden" asp-for="Id" />
   <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="mb-3">
     <label class="form-label text-muted small">
    <i class="fa-solid fa-hashtag me-1"></i>Hizmet ID
      </label>
     <input type="text" class="form-control-plaintext fw-bold" readonly value="#@Model.Id" />
      </div>

       <div class="mb-3">
  <label asp-for="Ad" class="form-label">
<i class="fa-solid fa-tag me-1"></i>Hizmet Adý
    </label>
    <input asp-for="Ad" class="form-control" placeholder="Örn: Saç Kesimi, Sakal Týraþý" />
    <span asp-validation-for="Ad" class="text-danger small"></span>
          <div class="form-text">
     <i class="fa-solid fa-info-circle me-1"></i>
  Hizmetin adýný giriniz.
     </div>
         </div>

  <div class="row">
     <div class="col-md-6">
       <div class="mb-3">
      <label asp-for="Sure" class="form-label">
    <i class="fa-solid fa-clock me-1"></i>Hizmet Süresi (Dakika)
    </label>
    <input asp-for="Sure" type="number" class="form-control" min="5" max="480" placeholder="30" />
       <span asp-validation-for="Sure" class="text-danger small"></span>
  <div class="form-text">
  Tahmini süre (5-480 dk)
     </div>
       </div>
     </div>
       <div class="col-md-6">
   <div class="mb-3">
     <label asp-for="Ucret" class="form-label">
    <i class="fa-solid fa-turkish-lira-sign me-1"></i>Hizmet Ücreti (TL)
    </label>
  <input asp-for="Ucret" type="number" step="0.01" class="form-control" min="0.01" max="10000" placeholder="100.00" />
     <span asp-validation-for="Ucret" class="text-danger small"></span>
     <div class="form-text">
   Hizmet ücreti (TL)
  </div>
        </div>
     </div>
</div>

     <div class="mb-4">
  <div class="form-check form-switch">
   <input asp-for="AktifMi" class="form-check-input" type="checkbox" role="switch" />
    <label asp-for="AktifMi" class="form-check-label">
 <i class="fa-solid fa-toggle-on me-1"></i>Aktif
   </label>
        </div>
       <div class="form-text">
    Pasif hizmetler randevularda gösterilmez.
    </div>
  </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <a asp-action="Hizmetler" class="btn btn-secondary">
 <i class="fa-solid fa-times me-1"></i>Ýptal
     </a>
       <button type="submit" class="btn btn-primary">
      <i class="fa-solid fa-save me-1"></i>Güncelle
</button>
    </div>
 </form>
      </div>
       </div>

  <div class="card mt-3 border-warning">
      <div class="card-body">
     <h6 class="text-warning">
   <i class="fa-solid fa-triangle-exclamation me-2"></i>Dikkat
      </h6>
       <p class="mb-0 small text-muted">
  Hizmet bilgilerini güncellerken, mevcut randevulara etki edebileceðini unutmayýn.
    </p>
 </div>
   </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
