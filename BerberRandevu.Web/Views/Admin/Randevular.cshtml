@model IReadOnlyList<BerberRandevu.Application.DTOlar.RandevuDto>
@{
    ViewData["Title"] = "Randevu Yönetimi";
}

<h2 class="mb-3">Randevu Yönetimi</h2>

@if (TempData["Basari"] != null)
{
    <div class="alert alert-success">@TempData["Basari"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">Henüz randevu bulunmuyor.</div>
}
else
{
    <div class="card">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Personel</th>
                        <th>Müşteri</th>
                        <th>Durum</th>
                        <th>Ücret</th>
                        <th>Ödeme</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Tarih.ToShortDateString()</td>
                            <td>@item.Saat.ToString(@"hh\:mm")</td>
                            <td>@item.PersonelAdSoyad</td>
                            <td>@item.MusteriId</td>
                            <td>
                                @if (item.Durum.ToString() == "Beklemede")
                                {
                                    <span class="badge bg-warning text-dark">Beklemede</span>
                                }
                                else if (item.Durum.ToString() == "Onaylandi")
                                {
                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else if (item.Durum.ToString() == "IptalEdildi")
                                {
                                    <span class="badge bg-danger">İptal Edildi</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Durum</span>
                                }
                            </td>
                            <td>@item.Ucret.ToString("C")</td>
                            <td>
                                @if (item.OdemeAlindiMi)
                                {
                                    <span class="badge bg-success">Alındı</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Bekliyor</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (item.Durum.ToString() == "Beklemede")
                                {
                                    <form asp-action="RandevuOnayla" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-success btn-sm me-1">
                                            <i class="fa-solid fa-check"></i> Onayla
                                        </button>
                                    </form>
                                    <form asp-action="RandevuIptalEt" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="fa-solid fa-xmark"></i> İptal
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted small">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

