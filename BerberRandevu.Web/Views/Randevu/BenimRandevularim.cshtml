@model IReadOnlyList<BerberRandevu.Application.DTOlar.RandevuDto>
@{
    ViewData["Title"] = "Randevularım";
}

<h2 class="mb-3">Randevularım</h2>

@if (TempData["Basari"] != null)
{
    <div class="alert alert-success">@TempData["Basari"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        Henüz bir randevunuz bulunmuyor. <a asp-action="Olustur">Hemen randevu alın.</a>
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Tarih</th>
                <th>Saat</th>
                <th>Personel</th>
                <th>Durum</th>
                <th>Ücret</th>
                <th>Ödeme</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Tarih.ToShortDateString()</td>
                <td>@item.Saat</td>
                <td>@item.PersonelAdSoyad</td>
                <td>@item.Durum</td>
                <td>@item.Ucret.ToString("C")</td>
                <td>
                    @if (item.OdemeAlindiMi)
                    {
                        <span class="badge bg-success">Alındı</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Bekliyor</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}


