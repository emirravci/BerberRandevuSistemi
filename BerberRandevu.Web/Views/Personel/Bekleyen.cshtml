@model IReadOnlyList<BerberRandevu.Application.DTOlar.RandevuDto>
@{
    ViewData["Title"] = "Bekleyen Randevular";
}

<h2 class="mb-3">Bekleyen Randevular</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Bugün için bekleyen randevu bulunmuyor.</div>
}
else
{
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Müşteri</th>
                <th>Tarih</th>
                <th>Saat</th>
                <th>Ücret</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MusteriId</td>
                <td>@item.Tarih.ToShortDateString()</td>
                <td>@item.Saat</td>
                <td>@item.Ucret.ToString("C")</td>
                <td class="text-end">
                    <form asp-action="Onayla" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-success btn-sm me-1">
                            <i class="fa-solid fa-check"></i> Onayla
                        </button>
                    </form>
                    <form asp-action="IptalEt" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="fa-solid fa-xmark"></i> İptal
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}


